<section class='form'>
	<%= form_for :sessions do |f| %>
		
		<%= f.label :username, 'Username', class: 'form-item form-label' %>
		<%= f.text_field :username, class: 'form-item form-field' %>

		<%= f.label :password, 'Password', class: 'form-item form-label' %>
		<%= f.password_field :password, class: 'form-item form-field' %>

		<%= f.submit 'Login', class: 'form-item form-button' %>
	<% end %>
</section>
