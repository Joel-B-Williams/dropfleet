<%= form_for [@user, @fleet] do |f| %>
	
	<%= f.label :name, "Fleet Name", class: 'form-item form-label' %>
	<%= f.text_field :name, class: 'form-item form-field' %>

	<%= f.label :points_level, "Points Level", class: 'form-item form-label' %>
	<%= f.text_field :points_level, class: 'form-item form-field' %>

	<%= f.collection_select( :faction_id, Faction.all, :id, :name ) %>

	<%= f.submit "Create Fleet", class: 'form-item form-button' %>

<% end %>