<%= form_for @user do |f| %>
	
	<%= f.label :username, "Username" %>
	<%= f.text_field :username %>
	
	<%= f.label :password, "Password" %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation, "Confirm Password" %>
	<%= f.password_field :password_confirmation %>

	<%= f.submit "Sign up" %>
	
<% end %>