
<li>
	<%= link_to ship_name(group), user_fleet_battlegroup_group_path(user, fleet, battlegroup, group) %>
	<% if not_min_size(group) %>
	<%= link_to '-', edit_user_fleet_battlegroup_group_path(user, fleet, battlegroup, group) %>
	<% end %>
	<%= size(group) %>
	<% if not_max_size(group) %>
	<%= link_to '+', edit_user_fleet_battlegroup_group_path(user, fleet, battlegroup, group) %>
	<% end %>
	<%= display_cost(group) %>
	<%= link_to "X", user_fleet_battlegroup_group_path(user, fleet, battlegroup, group), method: :delete %>
</li>

<!-- NOTE:  Redirects to fleet show from both fleet & battlegroup show pages -->