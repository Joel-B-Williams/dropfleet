<%= form_for [@user, @fleet, @battlegroup, @group] do |f| %>

<!-- clean up DB call outside of view -->
	<%= f.collection_select( :ship_id, Ship.where(tonnage_id: params[:tonnage], faction: @fleet.faction), :id, :dropdown_display ) %>
	<%= f.select :group_size, (1..6) %>
	<%= f.submit "Add group" %>
<% end %>